<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dewen.mapper.OrderItemMapper">


    <select id="getOrderItems" resultType="com.dewen.entity.OrderItem">
        SELECT i.* FROM t_order o JOIN t_order_item i ON o.id=i.order_id

    </select>
</mapper>